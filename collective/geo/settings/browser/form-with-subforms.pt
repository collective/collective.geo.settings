<html xmlns="http://www.w3.org/1999/xhtml"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      i18n:domain="collective.geo.settings"
      tal:omit-tag="">

  <div class="portalMessage"
       tal:condition="view/status" tal:content="view/status">
  </div>

  <div tal:attributes="class view/css_class|nothing">
    
    <form action="." method="post"
          tal:attributes="action request/getURL;
                          enctype view/enctype;"
          tal:omit-tag="not:view/actions|nothing">

        <metal:use use-macro="context/@@ploneform-macros/fields" />

      <tal:fieldsets tal:repeat="form view/subforms">
      <fieldset class="subforms">
        <legend tal:content="form/form_name">Form name</legend>
        <div class="discreet" tal:content="form/label">Form Label</div>
        <div 
             tal:replace="structure form/render">
        </div>

      </fieldset>
      </tal:fieldsets>
      
      <span class="action" tal:repeat="action view/actions/values|nothing">
        <input type="submit" tal:replace="structure action/render" />
      </span>

    </form>

  </div>
</html>
