<configure xmlns="http://namespaces.zope.org/zope"
          xmlns:browser="http://namespaces.zope.org/browser"
          xmlns:zope="http://namespaces.zope.org/zope"
          xmlns:five="http://namespaces.zope.org/five">
 
    <browser:page
        name="geosettings-controlpanel"
        for="*"
        class=".controlpanel.GeoControlpanel"
        permission = "cmf.ManagePortal" />

    <browser:page
        name="geosettings-macros"
        for="*"
        class=".geosettings_macros.GeoSettingsMacros"
        permission = "zope2.View" />

    <browser:resource
        name="geosettings.png"
        file="geosettings.png"
    />

    <browser:page
        for="Products.ATContentTypes.interface.IATTopic"
        name="geosettings-container"
        class=".container.geoContainerSettings"
        permission="cmf.ModifyPortalContent" />

    <browser:page
        for="Products.ATContentTypes.interface.IATFolder"
        name="geosettings-container"
        class=".container.geoContainerSettings"
        permission="cmf.ModifyPortalContent" />

    <browser:page
        for="Products.ATContentTypes.interface.IATBTreeFolder"
        name="geosettings-container"
        class=".container.geoContainerSettings"
        permission="cmf.ModifyPortalContent" />

</configure>
